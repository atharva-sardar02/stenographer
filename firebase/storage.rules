rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to matters/{matterId}/files/
    match /matters/{matterId}/files/{fileName} {
      allow read: if request.auth != null;
      // Allow uploads with size limit
      allow create: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024; // 10MB limit
      // Allow updates with size limit
      allow update: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024; // 10MB limit
      // Allow deletes for authenticated users
      allow delete: if request.auth != null;
    }
    
    // Allow authenticated users to read exports
    match /exports/{exportId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend can write
    }
  }
}

